<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6dbe1"
    tools:context="songhyeonlee.teamplayboard.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:weightSum="1"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="팀플보드"
            android:textColor="#636265"
            android:textSize="75dp"
            android:textStyle="bold"
            tools:text="TPBD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="ID"
            android:padding="10dp"
            android:background="#f4f4f4"/>

        <EditText
            android:id="@+id/idText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#f4f4f4"
            android:hint="비밀번호"
            android:padding="10dp"
            tools:text="password" />

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#3fa9f5"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:text="login" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="15dp"
            android:background="#ff8700"
            android:gravity="center"
            android:onClick="toJoin"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:text="join" />

        <Button
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:background="#f4f4f4"

            android:gravity="center"
            android:onClick="findIDPW"
            android:text="ID/비밀번호찾기"
            android:textStyle="bold"
            tools:text="id/password" />


    </LinearLayout>


</RelativeLayout>

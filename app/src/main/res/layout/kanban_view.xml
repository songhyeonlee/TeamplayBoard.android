<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/Task_list1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffffff"
        android:layout_below="@+id/delete"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/mKanbanName"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:onClick="show_details"
            android:text="task1"
            android:textSize="17dp"
            android:textStyle="italic"
            android:visibility="visible" />

        <Button
            android:id="@+id/mKanbanNext"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="완료하기 >"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/Task_list1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:weightSum="1">

        <TextView
            android:id="@+id/mKanbandueMessage"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="마감기한 : yy-mm-dd"
            android:paddingLeft="40dp"
            android:textSize="12dp"
            android:textColor="#ff8669"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/mKanbanBack"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:text="← 시작 전으로"

            android:textSize="10dp"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>